<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/graph"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal">

                <ImageView android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView android:id="@+id/question"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="¿Cómo te sientes el día de hoy?"/>

            <LinearLayout android:id="@+id/options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                >

                <ImageButton android:id="@+id/btn_verySad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_verysad"
                    android:background="@android:color/transparent"
                    />

                <ImageButton android:id="@+id/btn_sad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_sad"
                    android:background="@android:color/transparent"
                    />

                <ImageButton android:id="@+id/btn_neutral"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_neutral"
                    android:background="@android:color/transparent"
                    />

                <ImageButton android:id="@+id/btn_happy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_happy"
                    android:background="@android:color/transparent"
                    />

                <ImageButton android:id="@+id/btn_veryHappy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_outline_sentiment_very_satisfied_24"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>

            <Button android:id="@+id/guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/white"
                android:text="Guardar"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>

            <GridLayout android:id="@+id/bargraphs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Muy feliz"
                    android:layout_marginRight="15dp"
                    />

                <View android:id="@+id/graphVeryHappy"
                    android:layout_height="20dp"
                    android:layout_width="250dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Feliz"
                    android:layout_marginRight="15dp"
                    />

                <View android:id="@+id/graphHappy"
                    android:layout_height="20dp"
                    android:layout_width="250dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Neutral"
                    android:layout_marginRight="15dp"
                    />

                <View android:id="@+id/graphNeutral"
                    android:layout_height="20dp"
                    android:layout_width="250dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Triste"
                    android:layout_marginRight="15dp"
                    />

                <View android:id="@+id/graphSad"
                    android:layout_height="20dp"
                    android:layout_width="250dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Muy triste"
                    android:layout_marginRight="15dp"
                    />

                <View android:id="@+id/graphVerySad"
                    android:layout_height="20dp"
                    android:layout_width="250dp"/>


            </GridLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>